{
  "name": "smart-term",
  "version": "2.0.0",
  "description": "Smart Terminal - Electron + xterm.js + node-pty",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "postinstall": "node scripts/fix-node-pty-permissions.js",
    "check": "npm run check:syntax",
    "check:syntax": "node --check src/main.js && node --check src/preload.js && node --check src/renderer.js",
    "test:smoke:manual": "echo \"Run manual smoke checks for SSH, transfer, recovery, and audit flows\""
  },
  "keywords": [
    "terminal",
    "ssh",
    "xterm",
    "electron"
  ],
  "author": "Smart-Term Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/zhizhishuo/smart-term.git"
  },
  "bugs": {
    "url": "https://github.com/zhizhishuo/smart-term/issues"
  },
  "homepage": "https://github.com/zhizhishuo/smart-term#readme",
  "license": "MIT",
  "devDependencies": {
    "electron": "^33.4.11",
    "electron-builder": "^26.0.0",
    "playwright": "^1.58.2"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "keytar": "^7.9.0",
    "node-pty": "^1.0.0",
    "ssh2": "^1.17.0"
  }
}
